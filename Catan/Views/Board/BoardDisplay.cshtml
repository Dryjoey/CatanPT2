@{
    string size;
    if (Model.Tiles.Count <= 19)
    {
        size = "small";
    }
    else
    {
        size = "big";
    }
}
<div class="board-partial">
    @if (size == "small")
    {
        <partial name="Partial/_SmallBoard.cshtml" />
    }
    else
    {
        <partial name="Partial/_BigBoard.cshtml" />
    }

</div>
<ul class="main-menu-list ul-vertical-@size">
    <li>
        <div>
            <button type="button" class="main-menu-btn"><span class="lang" key="SaveImage"></span></button>
        </div>
    </li>
    <li>
        <div>
            <button type="button" class="main-menu-btn"><span class="lang" key="SaveLibrary"></span></button>
        </div>
    </li>
    <li>
        <div class="li-spacer" />
    </li>
    <li>
        <div>
            @using (Html.BeginForm("Index", "Home"))
            {
                <button type="button" class="main-menu-btn"><span class="lang" key="Menu"></span></button>
            }
        </div>
    </li>
</ul>

<div>
    <ul class="main-menu-list">
        <li class="li-horizontal-@size">
            <div>
                <button onClick="GoToSettings()" type="button" class="main-menu-btn horizontal-spacer"><span class="lang" key="GenNewSettings"></span></button>
                <button onClick="Refresh()" type="button" class="main-menu-btn"><span class="lang" key="GenSameSettings"></span></button>
            </div>
        </li>
    </ul>
</div>

<script>
    function Refresh() {
        window.location.reload();

    }
    function GoToSettings() {
        window.location = '../Settings';
    }
</script>
