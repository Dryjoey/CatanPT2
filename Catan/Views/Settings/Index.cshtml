@model Settingsmodel
<head>
    <link href="~/css/Settings.css" rel="stylesheet" type="text/css" />
</head>
<title>Generator Settings</title>
<h1 class="gentitle">
    Generator Settings
</h1>
@using (Html.BeginForm("Index", "Settings", FormMethod.Post))
{
<form action="" method="post" class="form-inline vertical-center">
    <div class="container text-center">
        <div class="row align-items-center">
            <div class="col-xs-6"></div>
            <div class="col-xs-2"><label class="checkdesc">Random</label></div>
            <div class="col-xs-2"><label class="checkdesc">Fixed</label></div>
        </div>
        <div class="row align-items-center">
            <div class="col-xs-6"><label class="label" for="TilePlacement">Tile Placement</label></div>
            <div class="col-xs-2">@Html.RadioButtonFor(m => m.TileIsRandom, true)</div>
            <div class="col-xs-2">@Html.RadioButtonFor(m => m.TileIsRandom, false)</div>
        </div>
        <div class="row align-items-center">
            <div class="col-xs-6"></div>
            <div class="col-xs-2"><label class="checkdesc">Random</label></div>
            <div class="col-xs-2"><label class="checkdesc">Fixed</label></div>
        </div>
        <div class="row align-items-center">
            <div class="col-xs-6"><label class="label" for="ChipPlacement">Chip Placement</label></div>
            <div class="col-xs-2">@Html.RadioButtonFor(m => m.ChipIsRandom, true)</div>
            <div class="col-xs-2">@Html.RadioButtonFor(m => m.ChipIsRandom, false)</div>
            <br />
        </div>
        <div class="row align-items-center">
            <div class="col-xs-6"></div>
            <div class="col-xs-2"><label class="checkdesc">4</label></div>
            <div class="col-xs-2"><label class="checkdesc">5</label></div>
        </div>
        <div class="row align-items-center">
            <div class="col-xs-6"><label class="label" for="NumberofPlayers">Number of Players</label></div>
            <div class="col-xs-2">@Html.RadioButtonFor(m => m.IsSmallBoard, true)</div>
            <div class="col-xs-2">@Html.RadioButtonFor(m => m.IsSmallBoard, false)</div>
            <br />
        </div>
        <input class="btn btn-primary btn-lg no-padding submitbutton" type="submit" id="submit-btn" value="Create" />
    </div>
</form>
}